<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.todoapp.controllers.HelloController">
    <top>
        <Label text="Todo Application" style="-fx-font-size: 24px; -fx-padding: 10px;" BorderPane.alignment="CENTER"/>
    </top>
    <center>
        <VBox spacing="10" padding="10">
            <TextField fx:id="todoInput" promptText="Enter a new todo item" />
            <Button text="Add Todo" fx:id="addButton" />
            <ListView fx:id="todoListView" />
        </VBox>
    </center>
</BorderPane>
